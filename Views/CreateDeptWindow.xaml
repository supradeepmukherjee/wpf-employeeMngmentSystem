<Window x:Class="EmployeeWpfClient.Views.CreateDeptWindow"
        Title="Create Department"
        Width="350"
        Height="180"
        WindowStartupLocation="CenterOwner"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        ResizeMode="NoResize">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Department Name"
                       Margin="0,0,0,4"/>

            <TextBox Text="{Binding DepartmentName, UpdateSourceTrigger=PropertyChanged}"
                     Height="26"/>
        </StackPanel>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">

            <Button Content="Create"
        Width="80"
        IsEnabled="{Binding DepartmentName, Converter={StaticResource StringNotEmptyConverter}}"
        Click="Create_Click"/>
        </StackPanel>
    </Grid>
</Window>