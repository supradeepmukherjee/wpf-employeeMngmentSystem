<Application x:Class="EmployeeWpfClient.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:EmployeeWpfClient"
             xmlns:vm="clr-namespace:EmployeeWpfClient.ViewModels"
             xmlns:view="clr-namespace:EmployeeWpfClient.Views"
             xmlns:converters="clr-namespace:EmployeeWpfClient.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type vm:ExploreTabViewModel}">
            <view:ExplorePane />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:EmployeesTabViewModel}">
            <view:EmployeesView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:DepartmentsTabViewModel}">
            <view:DepartmentsView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:ProjectsTabViewModel}">
            <view:ProjectsView />
        </DataTemplate>

        <DataTemplate x:Key="TabHeaderTemplate" DataType="{x:Type vm:TabViewModelBase}">
            <Border BorderBrush="#B0B0B0"
            BorderThickness="1"
            CornerRadius="4"
            Margin="0,0,6,0"
            Padding="10,6"
            Background="#EDEDED">
                <DockPanel LastChildFill="False" Margin="0">
                    <TextBlock Text="{Binding Header}" VerticalAlignment="Center" Margin="6,0"/>
                    <Button Width="20" Height="20" DockPanel.Dock="Right" Margin="4,0,4,0"
                        ToolTip="Close tab"
                        Command="{Binding DataContext.CloseTabCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                        CommandParameter="{Binding}">
                        <TextBlock Text="✕" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="11"/>
                        <Button.Visibility>
                            <Binding Path="IsClosable">
                                <Binding.Converter>
                                    <BooleanToVisibilityConverter/>
                                </Binding.Converter>
                            </Binding>
                        </Button.Visibility>
                    </Button>
                </DockPanel>
            </Border>
        </DataTemplate>

        <converters:StringNotEmptyConverter x:Key="StringNotEmptyConverter"/>
        <Style x:Key="TileButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="160"/>
            <Setter Property="Height" Value="120"/>
            <Setter Property="Margin" Value="0,0,16,16"/>
            <Setter Property="Background" Value="#E6E6E6"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#BEBEBE"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="4"
                        SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
